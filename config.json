{
  "project": {
    "name": "WeDraw企业微信、公众号、小程序及积分商城管理平台",
    "version": "1.0.0",
    "description": "企业微信、公众号、小程序及积分商城管理平台"
  },
  "ports": {
    "api_gateway": 3000,
    "user_center": 3001,
    "official_account": 3002,
    "wecom": 3003,
    "miniprogram": 3004,
    "points": 3005,
    "message": 3006,
    "analysis": 3007
  },
  "api": {
    "base_url": "http://localhost:3000",
    "version": "v1",
    "prefix": "/api/v1",
    "routes": {
      "user_center": "/api/v1/user",
      "official_account": "/api/v1/official",
      "wecom": "/api/v1/wecom",
      "miniprogram": "/api/v1/miniprogram",
      "points": "/api/v1/points",
      "message": "/api/v1/message",
      "analysis": "/api/v1/analysis"
    }
  },
  "database": {
    "mysql": {
      "host": "localhost",
      "port": 3306,
      "databases": {
        "user_center": "wedraw_user_center",
        "official_account": "wedraw_official",
        "wecom": "wedraw_wecom",
        "miniprogram": "wedraw_miniprogram",
        "points": "wedraw_points",
        "message": "wedraw_message",
        "analysis": "wedraw_analysis"
      }
    },
    "redis": {
      "host": "localhost",
      "instances": {
        "gateway": { "port": 6379, "db": 0 },
        "user_center": { "port": 6379, "db": 1 },
        "official_account": { "port": 6379, "db": 2 },
        "wecom": { "port": 6379, "db": 3 },
        "miniprogram": { "port": 6379, "db": 4 },
        "points": { "port": 6379, "db": 5 },
        "message": { "port": 6379, "db": 6 },
        "analysis": { "port": 6379, "db": 7 }
      }
    }
  },
  "security": {
    "jwt": {
      "secret": "wedraw_jwt_secret_key_2024",
      "expires_in": "2h"
    },
    "bcrypt": {
      "salt_rounds": 10
    }
  },
  "cors": {
    "origin": ["http://localhost:8080", "http://localhost:8081", "http://localhost:8082", "http://localhost:8083", "http://localhost:8084"],
    "credentials": true
  }
}