# API网关服务配置
NODE_ENV=development
PORT=3000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=2h

# 限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 微服务地址配置
USER_CENTER_URL=http://localhost:3001
WECHAT_OFFICIAL_URL=http://localhost:3002
WECOM_SERVICE_URL=http://localhost:3003
MINIPROGRAM_SERVICE_URL=http://localhost:3004
POINTS_MALL_URL=http://localhost:3005
MESSAGE_CENTER_URL=http://localhost:3006
DATA_ANALYSIS_URL=http://localhost:3007

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/api-gateway.log

# CORS配置
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# 健康检查
HEALTH_CHECK_INTERVAL=30000

# 超时配置
REQUEST_TIMEOUT=30000
PROXY_TIMEOUT=25000