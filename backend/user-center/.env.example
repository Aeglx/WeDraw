# 服务配置
NODE_ENV=development
PORT=3001
SERVICE_NAME=user-center

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wedraw_user_center
DB_USERNAME=root
DB_PASSWORD=password
DB_DIALECT=mysql
DB_TIMEZONE=+08:00
DB_LOGGING=true

# 连接池配置
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=user:

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=wedraw-user-center
JWT_AUDIENCE=wedraw-services

# 密码配置
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128

# 验证码配置
CAPTCHA_EXPIRES_IN=300
SMS_CODE_EXPIRES_IN=300
EMAIL_CODE_EXPIRES_IN=600
MAX_VERIFICATION_ATTEMPTS=5

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=WeDraw
SMTP_FROM_EMAIL=noreply@wedraw.com

# 短信配置（阿里云）
ALI_SMS_ACCESS_KEY_ID=your-access-key-id
ALI_SMS_ACCESS_KEY_SECRET=your-access-key-secret
ALI_SMS_REGION=cn-hangzhou
ALI_SMS_SIGN_NAME=WeDraw
ALI_SMS_TEMPLATE_CODE=SMS_123456789

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads
UPLOAD_URL_PREFIX=/uploads

# 头像配置
AVATAR_MAX_SIZE=2097152
AVATAR_WIDTH=200
AVATAR_HEIGHT=200
AVATAR_QUALITY=80

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_SMS_MAX=5
RATE_LIMIT_EMAIL_MAX=5

# 会话配置
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
MAX_DEVICES_PER_USER=5

# 安全配置
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# 微信配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_MINI_APP_ID=your-mini-app-id
WECHAT_MINI_APP_SECRET=your-mini-app-secret

# 企业微信配置
WECOM_CORP_ID=your-wecom-corp-id
WECOM_AGENT_ID=your-wecom-agent-id
WECOM_SECRET=your-wecom-secret

# 第三方登录配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 监控配置
MONITOR_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# 缓存配置
CACHE_TTL=3600
CACHE_USER_PROFILE_TTL=1800
CACHE_PERMISSIONS_TTL=900
CACHE_ROLES_TTL=3600

# 数据库备份配置
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# API版本
API_VERSION=v1
API_PREFIX=/api/v1

# 调试配置
DEBUG_ENABLED=false
DEBUG_SQL=false
DEBUG_REDIS=false