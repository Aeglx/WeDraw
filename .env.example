# 项目环境配置示例文件
# 复制此文件为 .env 并填入实际配置值

# 环境类型
NODE_ENV=development

# 服务端口配置
API_GATEWAY_PORT=3000
USER_CENTER_PORT=3001
OFFICIAL_PORT=3002
WECOM_PORT=3003
MINIPROGRAM_PORT=3004
POINTS_PORT=3005
MESSAGE_PORT=3006
ANALYSIS_PORT=3007

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password

# 数据库名称
USER_CENTER_DB=user_center_db
OFFICIAL_DB=official_db
WECOM_DB=wecom_db
MINIPROGRAM_DB=miniprogram_db
POINTS_DB=points_db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 微信公众号配置
WECHAT_OFFICIAL_APPID=your_official_appid
WECHAT_OFFICIAL_APPSECRET=your_official_appsecret
WECHAT_OFFICIAL_TOKEN=your_official_token
WECHAT_OFFICIAL_ENCODING_AES_KEY=your_encoding_aes_key

# 微信小程序配置
WECHAT_MINIPROGRAM_APPID=your_miniprogram_appid
WECHAT_MINIPROGRAM_APPSECRET=your_miniprogram_appsecret

# 企业微信配置
WECOM_CORP_ID=your_corp_id
WECOM_CORP_SECRET=your_corp_secret
WECOM_AGENT_ID=your_agent_id

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# 短信配置
SMS_ACCESS_KEY_ID=your_access_key_id
SMS_ACCESS_KEY_SECRET=your_access_key_secret
SMS_SIGN_NAME=your_sign_name

# 对象存储配置
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_bucket_name
OSS_REGION=your_region